# Where CICFlowMeter is installed:
APP_HOME=/opt/CICFlowMeter/build/install/CICFlowMeter

# Input/Output
IN_DIR=/var/lib/tcpdump                  # same as tcpdump PCAP_DIR
OUT_DIR=/var/log/cicflowmeter            # CSV destination

# Java 8 runtime (auto-detects if empty)
JAVA_HOME=
# Optional explicit Java path (overrides JAVA_HOME if set)
JAVA_BIN=

# Native libs for jnetpcap (adjust if needed)
LD_LIB_PATH=/usr/lib:/usr/lib/x86_64-linux-gnu

# Add log4j config to silence/shape logs (optional; file must exist if set)
LOG4J_CFG=/opt/cicflowmeter/log4j.properties

# Only process files older than N seconds (avoid partial rotators)
AGE_SEC=30

# Mark processed pcaps with a .done file to avoid reprocessing
USE_DONE_MARKERS=true
